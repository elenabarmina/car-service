<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.company.carservice.web.individual.IndividualEdit"
        datasource="individualDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.carservice.web.individual">
    <dsContext>
        <datasource id="individualDs"
                    class="com.company.carservice.entity.Individual"
                    view="individual-view">
            <collectionDatasource id="centerDs"
                                  property="center"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="individualDs">
            <column width="250px">
                <field property="name"/>
                <field property="email"/>
                <field property="phone"/>
                <field property="passportNo"/>
            </column>
        </fieldGroup>
        <groupBox id="centerBox"
                  caption="msg://com.company.carservice.entity/Individual.center">
            <table id="centerTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="centerDs"/>
                <buttonsPanel>
                    <button action="centerTable.add"/>
                    <button action="centerTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
